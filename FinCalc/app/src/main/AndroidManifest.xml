<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.fincalc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CertificateOfDepositCalc"
            android:label="@string/title_activity_certificate_of_deposit"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.fincalc.MainActivity" />
        </activity>
        <activity
            android:name=".MortgageCalc"
            android:label="@string/title_activity_mortgage_calc"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.fincalc.MainActivity" />
        </activity>
        <activity
            android:name=".AutoLoanCalc"
            android:label="@string/title_activity_auto_loan_calc"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.fincalc.MainActivity" />
        </activity>
        <activity
            android:name=".CreditCardCalc"
            android:label="@string/title_activity_credit_card_calc"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.fincalc.MainActivity" />
        </activity>
        <activity
            android:name=".AutoLeaseCalc"
            android:label="@string/title_activity_auto_lease_calc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RetirementCalc"
            android:label="@string/title_activity_retirement_calc"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.fincalc.MainActivity" />
        </activity>
        <activity
            android:name=".SavingsRecurringCalc"
            android:label="@string/title_activity_savings_recurring_calc"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mycompany.fincalc.MainActivity" />
        </activity>
    </application>

</manifest>
